<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AkbasTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/login.css" rel="stylesheet" /> <!-- Eklediğimiz CSS dosyası -->
</head>
<body>
    <header>
        <nav class="navbar bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand" href="#" onclick="redirectToLogin()">
                    <img src="https://media.licdn.com/dms/image/C4D0BAQHOBeiBlt-IHw/company-logo_200_200/0/1631016381822/akbalartekstila_logo?e=2147483647&v=beta&t=eetJCtDUZoTUYlicC2S8UfTA6MedYNctA7XecFFQDYU" alt="Akbas" width="30" height="24">
                </a>
            </div>

            <script>
                function redirectToLogin() {
                    window.location.href = '/Account/Login';
                }
            </script>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AkbasTest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
