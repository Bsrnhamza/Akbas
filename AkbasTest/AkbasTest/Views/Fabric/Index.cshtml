@model List<AkbasTest.Models.Fabric>

@{
    ViewData["Title"] = "Fabric List";
}

<div class="container">
    <h2>Fabric List</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Fabric</a>
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Fabric ID</th>
                <th>Fabric Name</th>
                <th>Fabric Type</th>
                <th>Color</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fabric in Model)
            {
                <tr>
                    <td>@fabric.FabricId</td>
                    <td>@fabric.FabricName</td>
                    <td>@fabric.FabricType</td>
                    <td>@fabric.Color</td>
                    <td>@fabric.Price</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@fabric.FabricId" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@fabric.FabricId" method="post" class="d-inline">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this fabric?')" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
