@model AkbasTest.Models.Fabric

<h1>Yeni Kumaş Ekle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Adı:</label>
        <input asp-for="FabricName" class="form-control" />
        <span asp-validation-for="FabricName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Türü:</label>
        <input asp-for="FabricType" class="form-control" />
        <span asp-validation-for="FabricType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Renk:</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Fiyat:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
